<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        motion:constraintSetEnd="@id/home_minimal_scene"
        motion:constraintSetStart="@id/home_base_scene"
        motion:duration="300">
        <OnSwipe
            motion:dragDirection="dragDown"
            motion:touchAnchorId="@id/home_time"
            motion:touchAnchorSide="top" />
    </Transition>
    <ConstraintSet android:id="@+id/home_base_scene">

        <Constraint
            android:id="@id/home_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.35" />

        <Constraint
            android:id="@id/home_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unit6"
            motion:layout_constraintEnd_toEndOf="@id/home_time"
            motion:layout_constraintStart_toStartOf="@id/home_time"
            motion:layout_constraintTop_toBottomOf="@id/home_time" />


        <Constraint
            android:id="@id/home_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/unit6"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent">

            <PropertySet
                android:alpha="0"
                android:visibility="gone"
                motion:motionProgress=".50"
                motion:visibilityMode="ignore" />
        </Constraint>

        <Constraint
            android:id="@id/home_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
            <PropertySet
                android:alpha="0"
                android:visibility="gone"
                motion:visibilityMode="ignore" />


        </Constraint>

    </ConstraintSet>
    <ConstraintSet android:id="@+id/home_minimal_scene">

        <Constraint
            android:id="@id/home_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unit13"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/home_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unit1"
            motion:layout_constraintEnd_toEndOf="@id/home_time"
            motion:layout_constraintStart_toStartOf="@id/home_time"
            motion:layout_constraintTop_toBottomOf="@id/home_time">

        </Constraint>

        <Constraint
            android:id="@id/home_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.65">
            <!--            <PropertySet-->
            <!--                android:alpha="1"-->
            <!--                android:visibility="visible" />-->
        </Constraint>

        <Constraint

            android:id="@id/home_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
            <PropertySet
                android:alpha="1"
                android:visibility="visible" />

        </Constraint>
    </ConstraintSet>


</MotionScene>