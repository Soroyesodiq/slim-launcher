<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        android:id="@+id/home_entry_transition"
        motion:constraintSetEnd="@id/minimal_scene"
        motion:constraintSetStart="@id/base_scene"
        motion:duration="200">
        <OnSwipe
            motion:dragDirection="dragDown"
            motion:touchAnchorId="@id/home_time"
            motion:touchAnchorSide="top" />
    </Transition>

    <Transition
        android:id="@+id/home_active_transition"
        motion:constraintSetEnd="@id/active_scene"
        motion:constraintSetStart="@id/minimal_scene"
        motion:duration="200"
        motion:motionInterpolator="easeInOut">

    </Transition>

    <ConstraintSet android:id="@+id/base_scene">

        <Constraint
            android:id="@id/home_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.35" />

        <Constraint
            android:id="@id/home_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unit7"
            motion:layout_constraintEnd_toEndOf="@id/home_time"
            motion:layout_constraintStart_toStartOf="@id/home_time"
            motion:layout_constraintTop_toBottomOf="@id/home_time" />


        <Constraint
            android:id="@id/home_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/unit6"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
            <PropertySet android:visibility="invisible" />
        </Constraint>

        <Constraint
            android:id="@id/home_list_extra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toEndOf="@id/home_list"
            motion:layout_constraintStart_toStartOf="@id/home_list"
            motion:layout_constraintTop_toBottomOf="@id/home_list">
            <PropertySet android:visibility="invisible" />
        </Constraint>

        <Constraint
            android:id="@id/home_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
            <PropertySet android:visibility="invisible" />
        </Constraint>

        <Constraint
            android:id="@id/home_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
            <PropertySet android:visibility="invisible" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/minimal_scene">

        <Constraint
            android:id="@id/home_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unit13"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/home_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toEndOf="@id/home_time"
            motion:layout_constraintStart_toStartOf="@id/home_time"
            motion:layout_constraintTop_toBottomOf="@id/home_time">

        </Constraint>

        <Constraint
            android:id="@id/home_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.65">
            <PropertySet android:visibility="visible" />
        </Constraint>
        <Constraint
            android:id="@id/home_list_extra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toEndOf="@id/home_list"
            motion:layout_constraintStart_toStartOf="@id/home_list"
            motion:layout_constraintTop_toBottomOf="@id/home_list">
            <PropertySet android:visibility="invisible" />
        </Constraint>

        <Constraint

            android:id="@id/home_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
            <PropertySet android:visibility="visible" />
            <Transform android:rotation="0" />
        </Constraint>

        <Constraint
            android:id="@id/home_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
            <PropertySet android:visibility="invisible" />
            <Transform android:rotation="-135" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/active_scene">
        <Constraint
            android:id="@id/home_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit2"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <Transform
                android:scaleX=".7"
                android:scaleY=".7" />
        </Constraint>
        <Constraint
            android:id="@id/home_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/home_time"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/home_time" />
        <Constraint
            android:id="@id/home_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/home_time">
            <PropertySet android:visibility="visible" />
        </Constraint>

        <Constraint
            android:id="@id/home_list_extra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toEndOf="@id/home_list"
            motion:layout_constraintStart_toStartOf="@id/home_list"
            motion:layout_constraintTop_toBottomOf="@id/home_list">
            <PropertySet android:visibility="visible" />
        </Constraint>

        <Constraint
            android:id="@id/home_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
            <PropertySet android:visibility="invisible" />
            <Transform android:rotation="135" />
        </Constraint>

        <Constraint
            android:id="@id/home_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <PropertySet android:visibility="visible" />
            <Transform android:rotation="0" />
        </Constraint>

    </ConstraintSet>

</MotionScene>